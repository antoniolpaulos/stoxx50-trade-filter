# STOXX50 0DTE Iron Condor Trade Filter Configuration
# Euro Stoxx 50 Options

# Rule thresholds
rules:
  vstoxx_max: 25                 # Rule 1: Max VSTOXX level (typically higher than VIX)
  intraday_change_max: 1.0       # Rule 2: Max intraday change (%)

# Strike calculation
strikes:
  otm_percent: 1.0               # How far OTM for short strikes (%)
  wing_width: 50                 # Wing width in points

# Additional filters (used with -a flag)
additional_filters:
  ma_deviation_max: 3.0          # Max % deviation from 20 DMA
  prev_day_range_max: 2.0        # Max previous day range (%)
  check_vstoxx_term_structure: false  # VSTOXX term structure data limited on yfinance

# Economic calendar settings
calendar:
  # Events to always flag as high-impact (EUR/Eurozone focused)
  always_watch:
    - "ECB"
    - "ECB Interest Rate Decision"
    - "ECB Press Conference"
    - "Eurozone CPI"
    - "Eurozone GDP"
    - "German CPI"
    - "German GDP"
    - "German ZEW"
    - "German Ifo"
    - "French CPI"
    - "Italian CPI"
    - "PMI"
    - "Eurozone Unemployment"
  # Use backup API if primary fails
  use_backup_api: true

# Telegram notifications (optional)
# Get bot token from @BotFather, chat_id by messaging your bot
telegram:
  enabled: false
  bot_token: "YOUR_BOT_TOKEN"
  chat_id: "YOUR_CHAT_ID"

# Telegram bot commands (optional)
# Interactive bot for querying status, portfolio, and history
telegram_bot:
  # Webhook URL for production (must be HTTPS)
  # Leave empty to use polling mode for development
  webhook_url: ""
  # Optional: restrict bot to specific user IDs
  # Leave empty to allow all users
  allowed_user_ids: []
  # Rate limiting (set enabled: false to disable)
  rate_limit_enabled: true
  rate_limit_window: 60       # seconds
  rate_limit_max_requests: 10  # max requests per window

# Shadow portfolio tracking
portfolio:
  enabled: false                   # Enable portfolio tracking with -p flag
  file: "portfolio.json"           # Portfolio data file
  credit: 10.00                    # Credit per spread for P&L calculation
  include_in_telegram: true        # Add portfolio summary to Telegram notifications

# Logging
logging:
  file: "trade_filter.log"
  level: "INFO"                  # DEBUG, INFO, WARNING, ERROR

# Data source configuration
data_sources:
  # Primary: Yahoo Finance (always available)
  # Backup: Alpha Vantage (free tier: 25 requests/day)
  # Get free API key at https://www.alphavantage.co/support/#api-key
  alpha_vantage_api_key: ""       # Optional: for backup data source
